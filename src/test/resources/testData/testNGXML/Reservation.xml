<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Reservation Suite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="listners.ExtentTestNGListener"/>
    </listeners>
    <test name="Reservation Test - 1 Passenger">
        <parameter name="dataPath" value="ReservationData/passenger-1.json"/>
        <classes>
            <class name="flightReservation.ReservationTestCases"/>
        </classes>
    </test>
    <test name="Reservation Test - 2 Passenger">
        <parameter name="dataPath" value="ReservationData/passenger-2.json"/>
        <classes>
            <class name="flightReservation.ReservationTestCases"/>
        </classes>
    </test>
    <test name="Reservation Test - 3 Passenger">
        <parameter name="dataPath" value="ReservationData/passenger-3.json"/>
        <classes>
            <class name="flightReservation.ReservationTestCases"/>
        </classes>
    </test>
    <test name="Reservation Test - 4 Passenger">
        <parameter name="dataPath" value="ReservationData/passenger-4.json"/>
        <classes>
            <class name="flightReservation.ReservationTestCases"/>
        </classes>
    </test>
</suite>